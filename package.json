{
  "name": "newPortfolio",
  "version": "1.1.0",
  "scripts": {
    "build": "npm run build_js && npm run compile_sass",
    "build_js": "babel src/js/main.js -w -o build/js/main.js",
    "compile_sass": "node-sass --watch --output-style compressed --include-path scss src/scss/main.scss build/css/main.css",

    "build_production": "npm run build_js_once && npm run compile_sass_once && npm run autoprefix_css",
    "build_js_once": "babel src/js/main.js -o build/js/main.js",
    "compile_sass_once": "node-sass --output-style compressed --include-path scss src/scss/main.scss build/css/main.css",
    "autoprefix_css": "postcss --use autoprefixer build/css/main.css -d build/css/"
  },
  "keywords": [],
  "author": "Mujavid Bukhari",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-webpack": "^6.4.1",
    "node-sass": "^3.8.0",
    "postcss-cli": "^2.5.2"
  },
  "babel": {
    "minified": true,
    "shouldPrintComment": false,
    "presets": [
      "babel-preset-es2015-webpack"
    ]
  }
}
